{
  "name": "electron-next-app",
  "version": "0.1.4",
  "private": true,
  "main": "main/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"npm:next:dev\" \"npm:electron:dev\"",
    "next:dev": "next dev",
    "electron:dev": "wait-on http://localhost:3000 && electron .",
    "build-next": "next build",
    "export-next": "next build && next export -o out",
    "start-next": "next start -p 3000",
    "start-electron": "electron .",
    "dist": "npm run build-next && electron-builder --publish=never",
    "dist:publish": "npm run build-next && electron-builder --publish=always",
    "dist:electron": "electron-builder ",
    "lint": "eslint"
  },
  "build": {
    "appId": "com.honsoft.electron-next-app",
    "productName": "ElectronNextApp",
    "files": [
      "main/**/*",
      ".next/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      ".next",
      "node_modules/next"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "changnam",
        "repo": "electron-next-app",
        "releaseType": "release"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "tailwindcss": "^4",
    "wait-on": "^9.0.1"
  }
}
